<!-- JavaScript to handle the scroll -->
<script>
  function selectColor(event, containerId) {
    // Remove the 'border-black' class from all circles in the specified container
    const circles = document.querySelectorAll(`#${containerId} .color-circle`);
    circles.forEach((circle) => {
      circle.classList.remove('border-black');
    });

    // Add the 'border-black' class to the selected circle
    event.target.classList.add('border-black');
  }

  function scrollRight() {
    const container = document.getElementById('product-container').querySelector('.overflow-x-auto');
    container.scrollBy({
      left: 230, // Adjust this value to the width of your product items
      behavior: 'smooth',
    });
  }

  // Set the first color as selected by default for each product item
  document.addEventListener('DOMContentLoaded', () => {
    const colorContainers = ['color-options-1', 'color-options-2', 'color-options-3'];
    colorContainers.forEach((containerId) => {
      const firstCircle = document.querySelector(`#${containerId} .color-circle`);
      firstCircle.classList.add('border-black'); // Highlight the first circle
    });
  });
</script>

